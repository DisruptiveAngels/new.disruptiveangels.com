.locations
  wrapped()
  text-align center
  padding-top 6rem
  padding-bottom 6rem
  
  +below(55rem)
    display none

.map
  width 500px
  height 340px
  margin-right auto
  margin-left auto
  background url('/assets/img/map.svg') no-repeat center
  position relative
  
.map-location
  width value
  position absolute
  display inline-block
  
  &:hover .map-address
    display block
    
  &:hover img
    opacity 1
  
  img
    width 100%
    display block
    opacity .5

.map-address
  shadow()
  display none
  position absolute
  min-width 500px
  padding 3rem
  top 50%
  left 200%
  transform translateY(-50%)
  border-radius 4px
  text-align center
  background-color white
  
  &:before
    position absolute
    left -1rem
    top 50%
    transform translateY(-50%)
    content ''
    display block
    width 0
    height 0
    border-top 1rem solid transparent
    border-bottom 1rem solid transparent
    border-right 1rem solid white
    
