.basic-container
  width 100%
  height 100vh
  background-color #0A2A43
  display flex
  align-items center
  justify-content center
  
.member-profile
  
  &-container
    max-height 800px
    height 80vh
    align-items center
    overflow auto
    
    +below(48rem)
      justify-content center

  &-info
    padding 3rem
    width 50%
    height 100%
    overflow auto

    +below(48rem)
      width 100%
      padding 2rem
    
  &-photo
    width 50%
    height 100%

    +below(48rem)
      display none
  
  &-name
    @extend .title
    margin-bottom 0
    color #0A2A43
    
  &-title
    @extend .title-tag
    
  &-quote
    @extend .title
    font-style italic
    font-size responsive 1.5rem 1.5rem
    margin-bottom 2rem
    
  &-socialMedia
    display flex
    margin-top 2rem
    align-items center
    
    .social-icons
      width 30px
          
.socialMedia-icon
  margin-right 2rem
  
