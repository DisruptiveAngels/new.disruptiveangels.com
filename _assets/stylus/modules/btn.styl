.btn
  background-color transparent
  border none
  display inline-block
  border-radius 4px
  text-decoration none
  text-transform uppercase
  
  &:hover
    transition 400ms all ease-in-out
  
  &__principal
    color $principal
    border 1px solid $principal
    padding 1em 3em
  
  &__white
    border-color white
    color white