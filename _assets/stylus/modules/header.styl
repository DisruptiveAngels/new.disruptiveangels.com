.header
  wrapped-left()
  display flex
  align-items center
  height 100vh
  background-color rgba($principal, .05)
  
  +below(75rem)
    wrapped-left(90%)
    height auto
  
  +below(55rem)
    wrapped(100%)
    flex-direction column
  
  &-image
  .text-container
    width 50%
    lost-column 1/2 2 0
    
  .text-container
    lost-column 5/12 0 0

    +below(55rem)
      wrapped(90%)
      padding-top 4rem
      padding-bottom 4rem
      width 100%
      order 1
      text-align center
  
  &-image
    height 100vh
    
    +below(55rem)
      order 0
      width 100%
      height 50vh